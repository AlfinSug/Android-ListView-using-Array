<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp"
    android:background="#ffff"
    tools:context=".DetailView">

    <com.jcminarro.roundkornerlayout.RoundKornerLinearLayout
        android:layout_width="match_parent"
        android:id="@+id/rounded"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        app:corner_radius="15dp">


        <ImageView
            android:id="@+id/img_detail"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_centerHorizontal="true"
            android:scaleType="centerCrop"
            android:src="@drawable/antlecabin_1" />

    <TextView
        android:id="@+id/txt_detail"
        android:layout_marginBottom="15dp"
        android:layout_width="match_parent"
        android:gravity="center_horizontal"
        android:layout_gravity="center_vertical"
        android:background="@color/colorPrimaryDark"
        android:alpha="0.5"
        android:layout_height="45dp"
        android:text="Antler Cabin Surabaya"
        android:textStyle="bold"
        android:fontFamily="cursive"
        android:textColor="#ffff"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="30sp"/>

    </com.jcminarro.roundkornerlayout.RoundKornerLinearLayout>

    // location cafe

    <LinearLayout
        android:id="@+id/location_cafe"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/rounded"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="70dp">

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/ic_location_on_black_24dp"
            android:layout_marginTop="5dp"/>

        <TextView
            android:id="@+id/loc_cafe"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:text="Location Cafe"
            android:textSize="15sp"
            android:paddingTop="5dp"
            android:layout_marginLeft="15dp"
            android:textColor="@color/colorPrimaryDark"
            android:fontFamily="@font/nunito"/>

    </LinearLayout>

    // phone cafe
    <LinearLayout
        android:id="@+id/phone_cafe1"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/location_cafe"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="5dp">

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/ic_phone_iphone_black_24dp" />

        <TextView
            android:id="@+id/phone_cafe"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:text="Phone Cafe"
            android:textSize="15sp"
            android:paddingTop="5dp"
            android:layout_marginLeft="15dp"
            android:textColor="@color/colorPrimaryDark"
            android:fontFamily="@font/nunito"/>

    </LinearLayout>

    // open cafe
    <LinearLayout
        android:id="@+id/open_cafe1"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/phone_cafe1"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="5dp">

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/door_open" />

        <TextView
            android:id="@+id/open_cafe"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:text="Buka 24 Jam"
            android:textSize="15sp"
            android:paddingTop="5dp"
            android:layout_marginLeft="15dp"
            android:textColor="@color/colorPrimaryDark"
            android:fontFamily="@font/nunito"/>

    </LinearLayout>

    // ig cafe
    <LinearLayout
        android:layout_marginTop="12dp"
        android:layout_below="@+id/open_cafe1"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="5dp">

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@drawable/ig" />

        <TextView
            android:id="@+id/ig_cafe"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:text="AlfinSugesti"
            android:textSize="15sp"
            android:paddingTop="5dp"
            android:layout_marginLeft="15dp"
            android:textColor="@color/colorPrimaryDark"
            android:fontFamily="@font/nunito"/>

    </LinearLayout>



</RelativeLayout>